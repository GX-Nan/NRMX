 }
  
/* 
 弹窗
*/
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
 
/* 弹出层 */
.modalDlg{
    width: 70%;
    position: fixed;
    top: 130px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 280px;
    border-radius: 15px;
    /*阴影*/
    border-radius: 8px;
    box-shadow:2px 1px 3px 3px #7f8389;
    background:-webkit-gradient(linear, 0% 10%, 50% 100%,from(#fdfbfb), to(#ebedee));
}

.modalDlgLight{
    width: 70%;
    position: fixed;
    top: 130px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 400px;
    border-radius: 15px;
    /*阴影*/
    border-radius: 8px;
    box-shadow:2px 1px 3px 3px #7f8389;
