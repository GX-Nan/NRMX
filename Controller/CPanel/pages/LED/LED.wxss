@import "../LED/iconfont/LedIconfont.wxss";

page {
    background-color: #F5F6F8;
    height: 100%;
}

/*设置尺寸和图*/

wx-slider .wx-slider-handle-wrapper {
    height: 60rpx;
}

.slider-light .wx-slider-track {
    background: linear-gradient(to right, #686666 0%, #000000 100%);
}

.slider-light.wx-block-size {
    block-size: 10;
}
/* 
     弹窗
    */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}

/* 弹出层 */
.modalDlg {
    width: 60%;
    position: fixed;
    top: 180px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 350px;
    border-radius: 15px;
    /*阴影*/
    border-radius: 8px;
    box-shadow: 2px 1px 3px 3px #7f8389;
    background: -webkit-gradient(linear, 0% 10%, 50% 100%, from(#fdfbfb), to(#ebedee));
}
.backTo{
    border-radius: 3px;
    box-shadow:1px 3px 4px 3px #7f8389;
    background:-webkit-gradient(linear, 0% 10%, 50% 100%,from(#fdfbfb), to(#ebedee));
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 
滚动条 */
.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%h;
}

.scroll-x {
    height: 80px;
    white-space: nowrap;
    display: flex;
}

/* 隐藏scrollbar */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.view-parent {
    display: inline-block;
}

